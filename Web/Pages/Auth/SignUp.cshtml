@page
@model Web.Pages.Auth.SignUpModel
@{
}

<div class="container mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            <partial name="_Alert" />

            <h1 class="mb-3 h3">Sign Up</h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label" for="userName">Username</label>
                    <input type="text" class="form-control" id="userName" asp-for="SignUpUser.UserName" />
                    <span asp-validation-for="SignUpUser.UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input type="email" class="form-control" id="email" asp-for="SignUpUser.Email" />
                    <span asp-validation-for="SignUpUser.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input type="password" class="form-control" id="userName" asp-for="SignUpUser.Password" />
                    <span asp-validation-for="SignUpUser.Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>